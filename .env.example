# SecureScope Configuration
PORT=3000
SESSION_SECRET=your_random_session_secret_here
DATABASE_PATH=./database/securescope.db
LOG_LEVEL=info
NODE_ENV=production
# Set to false if running in production over HTTP (e.g. local network)
# COOKIE_SECURE=true

# CSRF Token Secret
CSRF_SECRET=your_random_csrf_secret_here

# Default Admin Credentials (used only on first start if DB is empty)
# INITIAL_ADMIN_USERNAME=admin
# INITIAL_ADMIN_PASSWORD=change_this_to_a_secure_password

# Credential Encryption
# CREDENTIAL_SECRET=your_random_credential_secret_here
# CREDENTIAL_SALT=your_random_credential_salt_here

# Scan Configuration
SCAN_TIMEOUT=900000
MAX_CONCURRENT_SCANS=3
ALLOW_EXTERNAL_SCANS=false